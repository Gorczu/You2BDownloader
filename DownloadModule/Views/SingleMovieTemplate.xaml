<UserControl x:Class="DownloadModule.Views.SingleMovieTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DownloadModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">
    <Grid>
        <Label Margin="0,4,0,0" Content="{Binding NewName}" Panel.ZIndex="1"/>
        <Label Margin="0,4,0,0" HorizontalContentAlignment="Center" Content="{Binding PercentDownloaded}"
               Panel.ZIndex="1" />
        <ProgressBar Height="25" Panel.ZIndex="0"/>
    </Grid>
</UserControl>
